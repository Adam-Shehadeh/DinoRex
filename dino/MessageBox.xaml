<Window x:Class="dino.MessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dino"
        mc:Ignorable="d"
        Title="MessageBox" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <Button x:Name="btnOk" Margin="83,165,81,10" Content="Ok!" Click="btnOk_Click" />
        <Label HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="8,0,8,59">
            <TextBlock x:Name="lblDisplay" Text="Long Text . . . ." TextWrapping="Wrap" Height="145" Width="265" FontSize="18" />
        </Label>
    </Grid>
</Window>
